.col-md-6.col-md-offset-3
  %p
    %strong Username:
    = @user.username
  %p
    %strong Tipo:
    = (@user.admin)? "Administrador": "Usuario Comum"
  =link_to users_path, class: "btn btn-default btn-sm" do
    %span(class="glyphicon glyphicon-arrow-left")
    Voltar  
  = link_to edit_user_path(@user), class: "btn btn-default btn-sm" do
    %span(class="glyphicon glyphicon-edit")
    Editar
  = link_to @user, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-default btn-sm" do
    %span(class="glyphicon glyphicon-remove")
    Apagar