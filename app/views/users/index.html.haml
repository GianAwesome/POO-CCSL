.col-md-6.col-md-offset-3
  %h1
    Lista de usuários
    = link_to new_user_path, class: 'btn btn-default btn-xs' do
      %span(class="glyphicon glyphicon-plus")
      Novo usuário
  %table.table.table-condensed
    %thead
      %tr
        %th Username
        %th{:colspan => "3"}
    %tbody
      - @users.each do |user|
        %tr
          %td
            = link_to user, class: "btn btn-link" do
              %span(class="glyphicon glyphicon-user")
              = user.username
          %td
            = link_to edit_user_path(user), class: "btn btn-link btn-sm" do
              %span(class="glyphicon glyphicon-edit")
              Editar
          %td
            = link_to set_admin_path(:id => user, :admin => !user.admin), method: :put, data: {confirm: "Tem certeza?"}, class: "btn btn-link btn-sm" do
              %span(class="glyphicon glyphicon-asterisk")
              = (user.admin)? ('Tornar Usuario Comum'):('Tornar Administrador')
          %td
            = link_to @user, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-link btn-sm" do
              %span(class="glyphicon glyphicon-remove")
              Apagar
