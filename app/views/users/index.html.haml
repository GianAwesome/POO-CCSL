%p#notice= notice
%h1 Lista de usuários
%table
  %thead
    %tr
      %th Username
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= link_to 'Mostrar', user
        %td= link_to 'Editar', edit_user_path(user)
        %td= link_to 'Apagar', user, method: :delete, data: { confirm: 'Tem certeza?' }
%br
  = link_to 'Novo usuário', new_user_path