= form_for(@event) do |f|
  .form-group
    = f.label :title, 'Título'
    %br
      = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :summary, 'Resumo'
    %br
      = f.text_area :summary, rows: 10, class: 'form-control'
  .form-group
    = f.label :time, 'Data/Horário'
    %br
      = f.date_select :date, order: [:day, :month, :year], class: 'form-control'
      = f.time_select :time, class: 'form-control'
  .form-group
    = f.label :place, 'Local'
    %br
      = f.text_field :place, class: 'form-control'
  .form-group
    = f.label :address, 'Endereço'
    %br
      = f.text_field :address, class: 'form-control'
  .form-group
    = f.label :speaker, 'Apresentador'
    %br
      = f.text_field :speaker, class: 'form-control'
  .form-group
    = f.label :responsible, 'Responsável'
    %br
      = f.text_field :responsible, class: 'form-control'
  .form-group
    = f.label :performance, 'Realização'
    %br
      = f.text_field :performance, class: 'form-control'
  .form-group
    = f.label :url, 'URL'
    %br
      = f.text_field :url, class: 'form-control'
  .form-group
    = f.label :event_type_id, 'Tipo'
    %br
      = f.select :event_type_id, options_from_collection_for_select(@event_types, 'id', 'name_capitalize')
  .actions
    = f.submit 'Criar Evento'