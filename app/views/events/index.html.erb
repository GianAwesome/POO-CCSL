<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>Time</th>
      <th>Date</th>
      <th>Place</th>
      <th>Address</th>
      <th>Speaker</th>
      <th>Responsible</th>
      <th>Performance</th>
      <th>Url</th>
      <th>Event type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.summary %></td>
        <td><%= event.time %></td>
        <td><%= event.date %></td>
        <td><%= event.place %></td>
        <td><%= event.address %></td>
        <td><%= event.speaker %></td>
        <td><%= event.responsible %></td>
        <td><%= event.performance %></td>
        <td><%= event.url %></td>
        <td><%= event.event_type_id %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

