.col-md-12
  %h1 Lista de eventos  #{link_to 'Novo evento', new_event_path, class: 'btn btn-default btn-xs'}

  = form_tag events_path, :method => :get, :id => 'filter_form' do
    Mostrar:
    = check_box_tag "filter[all]", 'all', @selected_filters.include?(:all)
    Eventos antigos
    - if logged_in?
      = check_box_tag "filter[my]", 'my', @selected_filters[:my]
      Meus eventos
    = submit_tag 'Filtrar', :id => 'filter_submit', class: 'btn btn-default btn-xs'

  %table.table.table-condensed
    %thead
      %tr
        %th TÃ­tulo
        %th HorÃ¡rio
        %th Data
        %th Local
        %th Apresentador
        %th{:colspan => "2"}
    %tbody
      - @events.order_time.each do |event|
        %tr
          %td= link_to(event.title, event)
          %td= event.time.to_formatted_s(:time)
          %td= event.date
          %td= event.place
          %td= event.speaker
          %td= (current_user == event.user)? (link_to 'Editar', edit_event_path(event)): ""
          %td= (current_user == event.user)? (link_to 'Apagar', event, method: :delete, data: { confirm: 'Tem certeza?' }): ""